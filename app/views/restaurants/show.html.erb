<h1><%= @restaurant.name %></h1>
<p><%= @restaurant.category %></p>

<div class="btn-group" role="group" aria-label="...">
  <button type="button" class="btn btn-info"><%= link_to 'back to list', restaurants_path %></button>
  <button type="button" class="btn btn-default"><%= link_to 'edit this restaurant', edit_restaurant_path %></button>
  <button type="button" class="btn btn-danger"><%= link_to "Delete", restaurant_path(@restaurant),
      method: :delete,
      data: { confirm: "Are you sure?" } %></button>
</div>

